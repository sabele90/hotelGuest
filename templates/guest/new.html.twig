{% extends 'base.html.twig' %}

{% block title %}New Guest
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center align-items-center flex-column vh-100">

		<div class="header text-center mb-4">
			<h1 class="label">Create new Guest</h1>
		</div>
		<div class="card" style="width: 30rem; padding: 30px;">
			<div class="card-body  d-flex justify-content-center ">

				{{ form_start(form) }}
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.name) }}
						{{ form_widget(form.name) }}
						{{ form_errors(form.name) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.surname) }}
						{{ form_widget(form.surname) }}
						{{ form_errors(form.surname) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.dateOfBirth) }}
						{{ form_widget(form.dateOfBirth) }}
						{{ form_errors(form.dateOfBirth) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.gender) }}
						{{ form_widget(form.gender) }}
						{{ form_errors(form.gender) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.passportNumber) }}
						{{ form_widget(form.passportNumber) }}
						{{ form_errors(form.passportNumber) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.country) }}
						{{ form_widget(form.country) }}
						{{ form_errors(form.country) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.checkInDate) }}
						{{ form_widget(form.checkInDate) }}
						{{ form_errors(form.checkInDate) }}
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						{{ form_label(form.checkOutDate) }}
						{{ form_widget(form.checkOutDate) }}
						{{ form_errors(form.checkOutDate) }}
					</div>
				</div>
				<div class="text-center mt-3">
					<button class="btn">Save</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
